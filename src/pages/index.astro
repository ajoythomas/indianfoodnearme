---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Restaurant {
  name: string;
  address: string;
}

const restaurants: Restaurant[] = [
  { name: 'Spice in the City', address: '3108 Oak Lawn Ave, Dallas, TX 75219' },
  { name: 'Roti Grill', address: '4438 McKinney Ave, Dallas, TX 75205' },
  { name: 'India Palace', address: '12817 Preston Rd #105, Dallas, TX 75230' },
  { name: "Shiva's Bar & Grill", address: '1907 Greenville Ave, Dallas, TX 75206' },
  { name: 'Mumbai Grill', address: '1005 N Collins St, Arlington, TX 76011' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Best Indian Restaurants in Dallas</h1>
      <p>Explore some favorite Indian spots around Dallas. More cities coming soon.</p>
      <ul class="restaurant-list">
        {restaurants.map((r) => (
          <li class="restaurant-card">
            <h2>{r.name}</h2>
            <p>{r.address}</p>
          </li>
        ))}
      </ul>
    </main>
    <Footer />
  </body>
</html>

<style>
  .restaurant-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1rem;
  }
  .restaurant-card {
    padding: 1rem;
    border: 1px solid #ddd;
    border-radius: 0.5rem;
  }
</style>

